@page
@model TurismoNeuquen.Pages.AdminDetailsPoiModel
@{
    var poi = Model.PointOfInterest;
}

<div class="text-center">
    <h1 class="display-4">@poi.Name</h1>

    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="card mb-12 shadow-sm">
                    <div class="card-body">
                        <p class="card-text">@poi.Description</p>
                        <img src="@poi.ImageName" alt="Example Image" style="width: 100%; height: auto;" />
                    </div>
                </div>
            </div>
        </div>

        <div id="attractionFields" class="row" style="display: none;">
            <div class="col-md-12">
                <div class="card mb-4 shadow-sm">
                    <div class="card-body">
                        <p><strong>Opening Time:</strong> @Model.Attraction.OpeningTime?.ToString("HH:mm")</p>
                        <p><strong>Closing Time:</strong> @Model.Attraction.ClosingTime?.ToString("HH:mm")</p>
                        <p><strong>Open Days:</strong> @GetOpenDays(Model.Attraction.OpenDays)</p>
                    </div>
                </div>
            </div>
        </div>

        <div id="eventFields" class="row" style="display: none;">
            <div class="col-md-12">
                <div class="card mb-4 shadow-sm">
                    <div class="card-body">
                        <p><strong>Event Date:</strong> @Model.Event.EventDate.ToString("f")</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Confirm Button -->
        <div>
            <form method="post" asp-page-handler="Confirm" asp-route-id="@poi.Id">
                <button type="submit" class="btn btn-sm btn-outline-success">Confirm</button>
            </form>

            <!-- Delete Button -->
            <form method="post" asp-page-handler="Delete" asp-route-id="@poi.Id">
                <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
            </form>
        </div>

        <!-- Map Container -->
        <div class="row mt-4">
            <div class="col-md-12">
                <div id="poiMap" style="height: 400px; border: 1px solid #ddd;"></div>
            </div>
        </div>
    </div>
</div>

<!-- Include Leaflet CSS and JavaScript libraries -->
<link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
<script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        showFields();

        const poiLat = @poi.Latitude;
        const poiLng = @poi.Longitude;

        const map = L.map('poiMap').setView([poiLat, poiLng], 13);

        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
            attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'
        }).addTo(map);

        L.marker([poiLat, poiLng])
            .addTo(map)
            .bindPopup(`<b>${poi.Name}</b><br>${poi.Description}`)
            .openPopup();
    });

    function showFields() {
        const type = @Model.Type;
        const attractionFields = document.getElementById("attractionFields");
        const eventFields = document.getElementById("eventFields");

        if (type == 1) {
            attractionFields.style.display = "block";
            eventFields.style.display = "none";
        } else {
            attractionFields.style.display = "none";
            eventFields.style.display = "block";
        }
    }
</script>

@functions {
    private string GetOpenDays(string openDaysBinary)
    {
        if (string.IsNullOrEmpty(openDaysBinary))
            return "Not specified";

        var daysOfWeek = new[] { "Lunes", "Martes", "Miercoles", "Jueves", "Viernes", "Sabado", "Domingo" };
        var openDays = new List<string>();

        for (int i = 0; i < openDaysBinary.Length && i < daysOfWeek.Length; i++)
        {
            if (openDaysBinary[i] == '1')
                openDays.Add(daysOfWeek[i]);
        }

        return string.Join(", ", openDays);
    }
}
