@page
@model PoisModel
@{
    ViewData["Title"] = "Puntos de Interés";
}

<div class="text-center">
    <h1 class="display-4">Puntos de Interés</h1>

    <div class="container">
        <div class="row">
            @foreach (var poi in Model.Pois)
            {
                <div class="col-md-4">
                    <div class="card mb-4">
                        @* <img asp-append-version="true" class="bd-placeholder-img card-img-top" width="50%" height="200" src="~/images/@book.Image" /> *@
                        <div class="card-body">
                            <p class="card-text">@poi.Name</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a asp-page="DetailsPoi" asp-route-id="@poi.Id" class="btn btn-sm btn-outline-primary">Details</a>
                                </div>
                                <small class="text-muted">@poi.Description</small>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>