@page
@model TurismoNeuquen.Pages.AdminModel
@{
}
<div class="text-center">
    <h1 class="display-4">Puntos de Interés</h1>

    <div class="container">
        <div class="row">
            @foreach (var poi in Model.Pois)
            {
                <div class="col-md-4">
                    <div class="card mb-4">
                        <div class="card-body">
                            <p class="card-text">@poi.Name</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a asp-page="AdminDetailsPoi" asp-route-id="@poi.Id" class="btn btn-sm btn-outline-primary">Details</a>
                                    <form method="post" asp-page-handler="Confirm" asp-route-id="@poi.Id">
                                        <button type="submit" class="btn btn-sm btn-outline-success">Confirm</button>
                                    </form>
                                    <form method="post" asp-page-handler="Delete" asp-route-id="@poi.Id">
                                        <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                                    </form>
                                </div>
                                <small class="text-muted">@poi.Description</small>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
